@model PAW.Models.Game

@{
    ViewData["Title"] = "Delete Game";
    Layout = "_LayoutClient";
}

<h2>Delete Game</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this game?</strong>
</div>

<div>
    <h4>@Model.Title</h4>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Price:</strong> $@Model.Price</p>
    <p><strong>Release Date:</strong> @Model.ReleaseDate.ToShortDateString()</p>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="GameID" />
    <button type="submit" class="btn btn-danger mt-3">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
