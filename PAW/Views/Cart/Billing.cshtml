@model PAW.Models.ShoppingCart

@{
    ViewData["Title"] = "Billing";
    Layout = "_LayoutClient";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Billing.css" asp-append-version="true" />
}
<h2>Enter Billing Information</h2>

<form asp-action="ProcessPayment" method="post" class="billing-form">
    <div>
        <label>Name on Card</label>
        <input name="nameOnCard" required />
    </div>

    <div>
        <label>Card Number</label>
        <input name="cardNumber" pattern="\d{16}" maxlength="16" title="Card number must be 16 digits" required />
    </div>

    <div>
        <label>Expiration Date</label>
        <input name="expiryDate" pattern="(0[1-9]|1[0-2])\/?([0-9]{2})" title="Format: MM/YY" required />
    </div>

    <div>
        <label>CVV</label>
        <input name="cvv" pattern="\d{3}" maxlength="3" title="3-digit CVV" required />
    </div>

    <button type="submit">Pay Now</button>
</form>
